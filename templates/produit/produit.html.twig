 {% extends 'base.html.twig' %}

 {% block body %}
 <table border="1">
     <thead>
         <tr>
             <th>{{'produit.nom'|trans}}</th>
             <th width="250px">{{'produit.pic'|trans}}</th>
             <th>{{'produit.quantite'|trans}}</th>
             <th>{{'produit.prix'|trans}}</th>
             <th>{{'produit.del'|trans}}</th>
         </tr>
     </thead>
     <tbody>
         <tr>
             <td>{{produit.nom}}</td>
             <td><img src="{{asset('/uploads/'~ produit.photo)}}"></td>
             <td>{{produit.quantite}}</td>
             <td>{{produit.prix}}</td>
             <td><a href="{{path('delete', {'id':produit.id})}}">
                    {{'produit.delProd'|trans}}
                 </a>
             </td>
         </tr>
     </tbody>
 </table>
 {{form(Form_Panier)}}

 {% endblock %}